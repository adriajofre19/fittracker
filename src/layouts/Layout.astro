---
import "../styles/global.css";
import Navbar from "../components/Navbar";

interface Props {
	title?: string;
	hideNavbar?: boolean;
}

const { title = "Astro Basics", hideNavbar = false } = Astro.props;
---

<!doctype html>
<html lang="ca">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		{!hideNavbar && <Navbar client:load />}
		<slot />
	</body>
</html>
